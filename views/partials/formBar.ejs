<div class="formBar">
  <form action="/file/create" method="POST" enctype="multipart/form-data">
    <div class="newFileFormHeader">
      <h1>New File</h1>
      <img id="newFileFormToggle" src="/imgs/arrowdown.svg" alt="" />
    </div>
    <div class="newFileFormBody">
      <label for="file">Upload:</label>
      <input type="file" name="file" required />
      <label for="folderSelect">Add to Folder(s):</label>
      <select name="folderSelect" id="folderSelect" multiple>
        <% if (locals.folders) { %> <% folders.forEach((folder) => {%>
        <option value="<%= folder.id %>"><%= folder.name %></option>
        <%})%> <% } %>
      </select>
      <button>Submit</button>
    </div>
  </form>
  <form action="/folder/create" method="POST">
    <div class="newFolderFormHeader">
      <h1>New Folder</h1>
      <img id="newFolderFormToggle" src="/imgs/arrowdown.svg" alt="" />
    </div>
    <div class="newFolderFormBody">
      <label for="folderCreate">Folder Name:</label>
      <input
        type="text"
        name="folderCreate"
        required
        minlength="1"
        maxlength="20"
        placeholder="Max. 20 characters"
      />
      <button>Submit</button>
    </div>
  </form>
</div>
